%div.row
  %div.span8.offset2
    %p{style: "text-align: center"}
      Can't remember your password?
      = link_to "Reset it", new_user_password_path
      \.

    = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal"}) do |f|
      .form-inputs
        %div.control-group
          %div.controls
            = linkedin_sign_in_button

        = f.input :email, required: false, autofocus: true
        = f.input :password, required: false
        = f.input :remember_me, as: :boolean, label: false, inline_label: "Remember me" if devise_mapping.rememberable?
      .form-actions
        = f.button :submit, "Sign in", class: "btn-primary"
        = link_to "Reset Password", new_user_password_path, class: "btn"
