%div.result{id: "tool_#{result.id}"}
  %div.row
    %span.span2.header-avatar
      = link_to tool_path(result.id) do
        - if result.images.any?
          %a{href: "#images", role: "button", data: { toggle: "modal" }}
            %img.avatar{src: result.images.first.image.url(:thumb)}
        - else
          %i.avatar.icon-cogs

    %span.span8
      %div.title
        %h3= link_to result.display_name, tool_path(result.id)
        %div.muted= result.tool_category_name
      %table.table
        %tr
          %td Resolution
          %td= result.resolution
          %td Sample size
          %td= sample_size_text(result)
    %span.span2
      %div.reserve-now
        %div.price
          = number_to_currency result.price_for(@query.by)
        %div.muted per sample
        - if user_signed_in?
          - if can? :book, result
            %div{style: "padding-top: 10px;"}
              - if result.must_expedite?(@query.by)
                = link_to "Expedite", new_booking_path(tool_id: result.id, date: @query.by), class: "btn btn-success"
              - else
                = link_to "Reserve", new_booking_path(tool_id: result.id, date: @query.by), class: "btn btn-primary"
          - else
            %div
              = link_to "Edit", edit_tool_path(result), class: "btn"
        - else
          %div
            = link_to "Log In", new_booking_path(tool_id: result.id, date: @query.by), class: "btn"
          %div.small.muted to reserve
