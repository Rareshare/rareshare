%div.result
  %div.row
    %span.span2
      %div.well.reserve_now
        %div.price
          = number_to_currency result.price_for(@query.by)
        %div.muted per sample
        - if user_signed_in?
          - if result.leaseable_by?(current_user)
            %div{style: "padding-top: 10px;"}
              - if result.must_expedite?(@query.by)
                = link_to "Expedite", new_booking_path(tool_id: result.id, date: @query.by), class: "btn btn-success"
              - else
                = link_to "Reserve", new_booking_path(tool_id: result.id, date: @query.by), class: "btn btn-primary"
          - else
            %div
              Owner
              = link_to "Edit", edit_tool_path(result), class: "btn"
        - else
          %div
            = link_to "Log In", new_booking_path(tool_id: result.id, date: @query.by), class: "btn"
          %div.small.muted to reserve


    %span.span10
      %div.row
        %span.span10
          %h3.title
            = link_to result.display_name, tool_path(result.id)
      %div.row
        %span.span9
          %table.table
            %tr
              %td Resolution
              %td= result.resolution
              %td Sample size
              %td= sample_size_text(result)
