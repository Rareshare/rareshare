- content_for :head do
  :javascript
    #{filepicker_js_snippet}

= render layout: 'layouts/application' do
  %div.modal.hide.fade#modalConfirm(tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true")
    %div.modal-header
      %button.close(type="button" data-dismiss="modal" aria-hidden="true")
        %i.icon-remove
      %h3#modalLabel
    %div.modal-body
      %p Are you sure?
    %div.modal-footer
      %button.btn(data-dismiss="modal" aria-hidden="true") Cancel
      %button.btn.btn-primary OK

  %div.content.container
    = render layout: 'shared/navbar' do
      = yield

