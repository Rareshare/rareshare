!!!html
%html{lang: "en"}
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Rareshare"
    = csrf_meta_tags
    = stylesheet_link_tag "application", media: "all"
    %link(href='http://fonts.googleapis.com/css?family=Share+Tech' rel='stylesheet' type='text/css')
    %link(href='http://fonts.googleapis.com/css?family=Lato:300,700' rel='stylesheet' type='text/css')

  %body{id: controller.controller_name}
    %div.rareshare.navbar.navbar-top
      %div.navbar-inner
        %div.container
          %a.brand{href: root_path} Rareshare
          = form_tag search_url, method: "get", class: "navbar-search", id: "navbar-search", style: "position: relative" do
            %input(type="text" name="q" placeholder="What do you need?" style="border-right: none")
            %span.search_append
              %i(class="icon-search" style="color: black")
          %ul.nav.pull-right
            - if signed_in?
              %li
                %span.muted.navbar-text.welcome-message Welcome, #{current_user.first_name}
              %li= link_to "Sign Out", destroy_user_session_path, method: :delete
            - else
              %li= link_to "Learn More", "#"
              %li{class: current_page?(new_user_registration_path) ? "active" : ""}
                = link_to "Sign Up", new_user_registration_path
              %li{class: current_page?(new_user_session_path) ? "active" : ""}
                = link_to "Log In", new_user_session_path

  %div.content-root
    %div.content.container
      = yield
    - if controller.controller_name == "home"
      %div.about_us
        %div.container
          %div.row
            %div.span4
              %h3 Fast
              %i.icon-magic
              %p Find the tools you need in minutes.
            %div.span4
              %h3 Global
              %i.icon-globe
              %p The most advanced equipment, anywhere.
            %div.span4
              %h3 Effective
              %i.icon-beaker
              %p We put your research front and center.

    %footer.container
      %div.row
        %div.span12
          %p &copy; Rareshare 2012

    = javascript_include_tag "application"
