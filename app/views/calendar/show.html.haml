%div.row.row-header
  %span.span2.header-avatar
    %i.avatar.icon-calendar
  %span.span10.header-body
    = breadcrumbs :root, @calendar
    %h1 Calendar
    %span.muted= @calendar.title

%div.row
  %span.span2
    %table.calendar
      %thead
        %tr
          - @calendar.days_of_week.each do |d|
            %th= d
      %tbody
        - @calendar.weeks.each do |week|
          %tr
            - week.each do |date|
              %td{class: date_class_for(@calendar, date)}= date.day

    %div.pull-left
      = link_to glyph("angle-left"), calendar_path(@calendar.prev)
    %div.pull-right
      = link_to glyph("angle-right"), calendar_path(@calendar.next)

  %span.span10
    - if @calendar.bookings.empty?
      %p You have no bookings this month.
    - else
      = render partial: 'bookings/list', object: @calendar.bookings

