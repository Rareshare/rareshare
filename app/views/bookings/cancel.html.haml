- nav_category "Bookings"

= page_header "Cancel Finalized Booking",
  icon: "cogs",
  crumbs: [:root, Booking, @booking, "Cancel"],
  subtitle: @booking.display_name

%div.row
  %div.span2
  %div.span8
    %p You are about to cancel this booking. This might cost money. Cool? (yes/no)
    = simple_form_for @booking do |f|
      = f.button :submit, value: "Yes, cancel", class: "btn btn-danger"
      = link_to "No, don't", booking_path(@booking), class: "btn"
