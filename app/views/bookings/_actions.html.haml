= simple_form_for booking, html: { class: "no-margin form-inline", style: "display: inline-block" } do |f|
  - if can? :finalize, booking
    = link_to "Finalize & Pay", finalize_booking_path(booking), class: "btn btn-success", style: "display: inline-block"
  - if can? :confirm, booking
    = f.button :submit, value: "Approve", class: "btn btn-success", data: { toggle: "confirm", title: "Approve Booking" }
  - if can? :deny, booking
    = f.button :submit, value: "Deny", class: "btn btn-danger", data: { toggle: "confirm", title: "Deny Booking" }
  - if can? :cancel, booking
    - if booking.finalized?
      = link_to "Cancel", cancel_booking_path(booking), class: "btn btn-mini btn-danger"
    - else
      = f.button :submit, value: "Cancel", class: "btn btn-mini btn-danger", data: { toggle: "confirm", title: "Cancel Booking" }
