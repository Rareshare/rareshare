- nav_category "Share a Tool"

= link_to tool_path(@booking.tool) do
  %i.icon.icon-angle-left
  Cancel

= simple_form_for @booking do |f|
  %div.form-inputs
    = f.input :tool_id, as: :hidden
    = f.input :deadline, as: :hidden
    %fieldset
      %legend Confirm Request
      %div.row
        %span.span3
          %p Please describe your intended usage of the tool.
        %span.span9
          %p
            Request to book
            = link_to @booking.tool.display_name, tool_path(@booking.tool)
            to process a sample on or before #{@booking.deadline.to_date.to_s(:long)}.
            The total cost for this lease will be #{number_to_currency @booking.total_cost}.
          = f.input :sample_description

          %div{style: "overflow-y: scroll; max-height: 300px"}
            = sanitize Page.where(title: "Terms & Conditions").first.try(:content)

          = f.input :tos_accepted, label: false, inline_label: "I have read and agree to the #{page_link_to('Terms & Conditions')} for this lease.".html_safe

    %div.row
      %span.offset3.span9
        = f.submit "Reserve", class: "btn btn-primary"
        = link_to "Cancel", :back, class: "btn"
