- if @tool.owned_by?(current_user)
  - nav_category "Share a Tool"
- else
  - nav_category "Find a Tool"

= page_header @tool.display_name,
  icon: "cogs",
  crumbs: @tool.owned_by?(current_user) ? [:root, Tool, @tool] : [:root, :search, @tool],
  subtitle: @tool.tool_category_name

%div.row
  %span.span2.sidebar.profile-sidebar
    %div.row.row-header
      %span.span2.header-avatar
        %h4{style: "text-align: center"} Owner
        = avatar_of @tool.owner

    - if can?(:edit, @tool)
      = link_to glyph_text(:edit, "Edit tool"), edit_tool_path(@tool), class: "btn"

  %span.span8
    - if can?(:book, @tool)
      %div.well.well-small{style: "padding-bottom: 0;"}
        %form.no-margin.form-inline{action: new_booking_path, method: :get, class: "form-inline"}
          %input{type: "hidden", name: "tool_id", value: @tool.id}
          %div.row
            %span.span2
              %strong{style: "line-height: 30px;"} Get a sample by
            %span.span4
              %div.control-group
                %div.input-append
                  %input{type: "date", name: "date", class: "date", value: SearchQuery.default_date.strftime("%d %B, %Y"), data: { min: Date.today }}
                  %span{class: "add-on"}
                    %i.icon-calendar


            %span.span1
              %input{type: "submit", value: "Reserve Now", class: "btn btn-primary"}

    %h3 Overview
    %table.table
      %tbody
        %tr
          %th Category
          %td
            = link_to search_path(q: @tool.tool_category_name) do
              = @tool.tool_category_name
        %tr
          %th Manufacturer
          %td
            = link_to search_path(q: @tool.manufacturer_name) do
              = @tool.manufacturer_name
        %tr
          %th Model
          %td
            = link_to search_path(q: @tool.model_name) do
              = @tool.model_name
        %tr
          %th Year manufactured
          %td= @tool.year_manufactured
        %tr
          %th Resolution
          %td= @tool.resolution
        %tr
          %th Price per run
          %td
            = price_per_sample @tool, :base
            - if @tool.can_expedite?
              %br
              = price_per_sample @tool, :expedited
        %tr
          %th Sample size
          %td
            10
            %sup= @tool.sample_size_min
            to 10
            %sup= @tool.sample_size_max
        %tr
          %th Location
          %td= @tool.partial_address

    %div{id: "gallery", data: { toggle: "modal-gallery", target: "#images" }}
      - @tool.images.each do |image|
        %a{href: image.url, data: { gallery: "gallery" } }
          %img{src: image.thumbnail}

      / %a{href: "#images", role: "button", data: { toggle: "modal" }}
      /   %img.avatar{src: @tool.images.first.image.url(:thumb)}

    %h3 Description
    - if @tool.description.blank?
      %p No description given.
    - else
      %p= sanitize @tool.description

    - if @tool.images.any?
      %a.btn{href: "#images", role: "button", data: { toggle: "modal" }} Images

      %div#images.modal.modal-gallery.hide.fade{tabindex: -1}
        = modal_header do
          %h3#imagesLabel Images
        = modal_body do
          %div.modal-image
        = modal_footer do
          %a.btn.btn-info.modal-prev= glyph_text :arrow_left, "Previous"
          %a.btn.btn-primary.modal-next= glyph_text "Next", :arrow_right
          %a.btn.btn-success.modal-play.modal-slideshow{"data-slideshow" => 5000}= glyph_text :play, "Slideshow"

%div.row
  %span.span8.offset2
    %h3 Location
    %h4.address
      %strong
        = @tool.partial_address
    %iframe{width: "100%", height: "350", frameborder: "0", scrolling: "no", marginheight: "0", marginwidth: "0", src: google_maps_address_for(@tool.partial_address)}


