%div.row.row-header
  %span.span2.header-avatar
    %i.avatar.icon-cogs
  %span.span10.header-body
    = breadcrumbs :root, Tool
    %h1 Tools
    %span.muted &nbsp;

%div.row
  %span.span2.sidebar
    = link_to glyph_text(:plus, "Add tool"), new_tool_path, class: "btn btn-info"
  %span.span10
    - if @tools.any?
      %table.table.table-hover.table-bordered
        %thead
          %tr
            %th Item description
            %th Cost
            %th Options
        %tbody
          - @tools.each do |t|
            %tr
              %td= link_to t.display_name, tool_path(t)
              %td
                = price_per_sample t, :base
                - if t.can_expedite?
                  %br
                  = price_per_sample t, :expedited
              %td
                = simple_form_for t, method: :delete, html: { class: "no-margin" } do |f|
                  .form-actions
                    = link_to "Edit", edit_tool_path(t), class: "btn btn-mini btn-info"
                    = f.submit "Delete", class: "btn btn-mini btn-danger", data: { toggle: "confirm", title: "Delete Tool" }
