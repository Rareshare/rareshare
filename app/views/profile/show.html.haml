%div.row.row-header
  %span.span2.header-avatar
    - if current_user.avatar.present?
      %img.avatar{src: current_user.avatar.url(:thumb)}
    - else
      %i.avatar.icon-user
  %span.span10.header-body
    = breadcrumbs :root
    %h1= current_user.display_name
    %span.muted
      Joined on
      = current_user.confirmed_at.to_date.to_s(:long)

%div.row
  %span.span2.sidebar
    = link_to glyph_text(:edit, "Edit profile"), edit_profile_path, class: "btn"
    = link_to glyph_text(:plus, "Add tool"), new_tool_path, class: "btn btn-info"
    = link_to glyph_text(:envelope, "Messages"), messages_path, class: "btn btn-success"
  %span.span10.profile-main
    %h3.pull-up Unread Messages
    - if current_user.unread_message_count == 0
      %p You have no unread messages.
    - else
      = render partial: 'messages/messages', object: current_user.received_messages.unread.order("created_at DESC")

    %h3 Recent booking history

    %div.modal.hide.fade#myModal(role="dialog" aria-labelledby="confirm-title" aria-hidden="true")
      %div.modal-header
        %button.close(type="button" class="close" data-dismiss="modal" aria-hidden="true") x
        %h3#confirm-title Cancel

<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Modal header</h3>
  </div>
  <div class="modal-body">
    <p>One fine body…</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary">Save changes</button>
  </div>
</div>

    - if current_user.all_recent_bookings.any?
      = render partial: 'bookings/list', object: current_user.all_recent_bookings
    - else
      %p
        You have no booking history.
        = link_to "Find a tool", search_path
        or
        = link_to "list a tool", new_tool_path
        now.
